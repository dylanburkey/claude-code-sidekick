{
  "enabled": true,
  "version": "1.0.0",
  "description": "Example hooks configuration generated by /hooks-setup",
  "hooks": {
    "git": {
      "pre-commit-validation": {
        "enabled": true,
        "actions": [
          "lint",
          "format-check",
          "type-check",
          "test-affected"
        ],
        "settings": {
          "failOnError": true,
          "parallel": true,
          "timeout": 120000
        }
      },
      "commit-message-validation": {
        "enabled": true,
        "pattern": "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\\(.+\\))?!?: .{1,100}",
        "settings": {
          "failOnError": true,
          "skipMergeCommits": true
        }
      },
      "pre-push-validation": {
        "enabled": false,
        "actions": [
          "test-full",
          "build",
          "security-scan"
        ],
        "settings": {
          "failOnError": true,
          "timeout": 300000
        }
      }
    },
    "file": {
      "auto-format-on-save": {
        "enabled": true,
        "extensions": [".js", ".ts", ".tsx", ".jsx", ".json", ".css", ".scss", ".html", ".md"],
        "formatter": "prettier",
        "settings": {
          "configFile": ".prettierrc",
          "ignoreFile": ".prettierignore"
        }
      },
      "auto-import-sort": {
        "enabled": true,
        "extensions": [".js", ".ts", ".tsx", ".jsx"],
        "settings": {
          "sortOrder": ["builtin", "external", "internal", "parent", "sibling", "index"],
          "removeUnused": true
        }
      },
      "auto-documentation": {
        "enabled": false,
        "triggers": ["on-save"],
        "settings": {
          "generateJSDoc": true,
          "updateREADME": true
        }
      }
    },
    "build": {
      "pre-build-validation": {
        "enabled": false,
        "actions": [
          "lint",
          "type-check"
        ],
        "settings": {
          "failOnError": true
        }
      },
      "post-build-actions": {
        "enabled": false,
        "actions": [
          "analyze-bundle",
          "generate-source-maps"
        ]
      }
    },
    "deployment": {
      "pre-deploy-checks": {
        "enabled": false,
        "actions": [
          "test-full",
          "build-production",
          "security-scan"
        ],
        "settings": {
          "failOnError": true,
          "requireApproval": true
        }
      },
      "post-deploy-verification": {
        "enabled": false,
        "actions": [
          "health-check",
          "smoke-test",
          "verify-metrics"
        ],
        "settings": {
          "failOnError": true,
          "rollbackOnFailure": true
        }
      },
      "deployment-notifications": {
        "enabled": false,
        "channels": ["slack", "email"],
        "settings": {
          "notifyOnSuccess": true,
          "notifyOnFailure": true
        }
      }
    },
    "agent": {
      "task-completion-notifications": {
        "enabled": true,
        "settings": {
          "notifyOnSuccess": true,
          "notifyOnFailure": true,
          "desktop": true,
          "sound": false
        }
      },
      "agent-error-handling": {
        "enabled": true,
        "settings": {
          "logErrors": true,
          "saveContext": true,
          "notifyUser": true,
          "createIssueOnCritical": false
        }
      }
    },
    "documentation": {
      "readme-sync": {
        "enabled": true,
        "triggers": ["post-commit"],
        "settings": {
          "updateBadges": true,
          "updateAPIExamples": true,
          "updateDependencies": true,
          "autoCommit": false
        }
      }
    },
    "quality": {
      "complexity-analysis": {
        "enabled": false,
        "triggers": ["on-commit"],
        "settings": {
          "maxComplexity": 10,
          "warnThreshold": 8,
          "failOnError": false
        }
      },
      "security-scanning": {
        "enabled": false,
        "triggers": ["pre-commit"],
        "settings": {
          "scanDependencies": true,
          "scanCode": true,
          "failOnCritical": true
        }
      }
    }
  },
  "global": {
    "timeout": 120000,
    "parallel": false,
    "skipCIEnvironment": false,
    "logLevel": "info",
    "notifications": {
      "enabled": true,
      "desktop": true,
      "sound": false
    }
  },
  "environment": {
    "CI": false,
    "NODE_ENV": "development"
  }
}
